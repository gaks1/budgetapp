<%= form_with model: entity, url: group_entities_path(group_id: @group.id ), html: {class: "login-form"} do |form| %>
  <% if entity.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entity.errors.count, "error") %> prohibited this entity from being saved:</h2>

      <ul>
        <% entity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "login-input" %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount, class: "login-input" %>
  </div>

  <div>
    <%= form.submit "Save", class: "reg-form-submit" %>
  </div>
<% end %>
