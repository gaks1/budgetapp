<div id="<%= dom_id group %>">
  <p>
    <strong>Name:</strong>
    <%= group.name %>
  </p>

  <p>
    <strong>Icon:</strong>
    <%= image_tag group.icon if group.icon.attached? %>
  </p>

  <p>
    <strong>User:</strong>
    <%= group.user_id %>
  </p>

  <p>
    <strong>Total Amount:</strong>
    <%= @totalamount[group.id] %>
  </p>
</div>