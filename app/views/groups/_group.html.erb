<div class="group">
<p>
<%= image_tag(group.icon, class: "group-img") if group.icon.attached? %>
</p>

<div class="groupname">
  <p>
  <%= link_to group.name, group_path(group), class: "group-link" %>
  </p>

  <p>
  <%= entity.created_at.strftime("%Y-%m-%d") %>
  </p>
</div>

<div class="groupname">
  <p style="margin-right: 10px;">
    <strong>$</strong>
    <%= @totalamount[group.id] %>
  </p>

  <%= button_to "Delete", group_path(group), method: :delete, class: "delete" %>

  </div>
</div>