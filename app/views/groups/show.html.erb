<p style="color: green"><%= notice %></p>

<%= render @group %>
<div id="entities">
  <% @entities.each do |entity| %>
    <%= render entity %>
    <p>
      <%= link_to "Show this entity", group_entity_path(@group, entity) %>
    </p>
  <% end %>
</div>

<div>
  <%= link_to "Back to groups", groups_path %>

  <%= button_to "Destroy this group", @group, method: :delete %>

  <%= link_to "New entity", new_group_entity_path(@group) %>
</div>
