<div class="login-form-container">
<h2 class="title">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html: {class: "login-form"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-input"  %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "reg-form-submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>